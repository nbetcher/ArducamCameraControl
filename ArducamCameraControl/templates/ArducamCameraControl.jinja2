<div id="arducam-camera-control" style="clear: both;">

  <!-- ── PTZ Pan / Tilt ──────────────────────────────────────────── -->
  <div id="arducam-ptz-panel" class="jog-panel" style="display:none;">
    <h1>Pan / Tilt</h1>
    <div>
      <button id="arducam-tilt-up" class="btn arducam-box">
        <i class="fas fa-arrow-up"></i>
      </button>
    </div>
    <div>
      <button id="arducam-pan-left" class="btn arducam-box pull-left">
        <i class="fas fa-arrow-left"></i></button
      ><button id="arducam-pan-tilt-label"
               class="btn arducam-box pull-left"
               style="padding:0;"
      ></button
      ><button id="arducam-pan-right"
               class="btn arducam-box pull-left">
        <i class="fas fa-arrow-right"></i>
      </button>
    </div>
    <div>
      <button id="arducam-tilt-down" class="btn arducam-box">
        <i class="fas fa-arrow-down"></i>
      </button>
    </div>
    <div class="btn-group" data-toggle="buttons-radio" id="arducam-step-group">
      <button id="arducam-step-5"  type="button" class="btn active">5</button
      ><button id="arducam-step-10" type="button" class="btn">10</button
      ><button id="arducam-step-20" type="button" class="btn">20</button>
    </div>
  </div>

  <!-- ── I2C Focus & Zoom ────────────────────────────────────────── -->
  <div id="arducam-i2c-panel" class="jog-panel" style="display:none; width:330px;">
    <div id="arducam-focus-group" style="display:none;">
      <h1>Focus <small id="arducam-focus-value"></small></h1>
      <input id="arducam-ptz-focus" type="range"
             class="input-block-level" value="10000" min="0" max="20000" />
    </div>
    <div id="arducam-zoom-group" style="display:none;">
      <h1>Zoom <small id="arducam-zoom-value"></small></h1>
      <input id="arducam-ptz-zoom" type="range"
             class="input-block-level" value="10000" min="0" max="20000" />
    </div>
  </div>

  <!-- ── IR-Cut Filter ───────────────────────────────────────────── -->
  <div id="arducam-ircut-panel" class="jog-panel" style="display:none;">
    <h1>IR-Cut Filter</h1>
    <button id="arducam-ircut" class="btn">ON</button>
  </div>

  <!-- ── Dynamic v4l2 / libcamera controls ───────────────────────── -->
  <div id="arducam-v4l2-panel" class="jog-panel" style="display:none; width:330px;">
    <h1>Camera Controls</h1>
    <div id="arducam-v4l2-controls">
      <!-- populated dynamically by JS -->
    </div>
  </div>

  <!-- ── Status / diagnostics (shown when nothing is found) ──────── -->
  <div id="arducam-status-panel" class="jog-panel" style="display:none; width:330px;">
    <h1><i class="fas fa-info-circle"></i> Camera Status</h1>
    <div id="arducam-status-message" class="arducam-status-body">
      <p id="arducam-status-text">Checking camera…</p>
      <details id="arducam-status-details">
        <summary>Diagnostics</summary>
        <dl id="arducam-diagnostics-list" class="arducam-diagnostics-dl"></dl>
      </details>
    </div>
  </div>

  <!-- ── Refresh controls (always visible once loaded) ───────────── -->
  <div id="arducam-refresh-panel" class="jog-panel" style="display:none;">
    <button id="arducam-refresh-btn" class="btn btn-small" title="Re-probe camera controls">
      <i class="fas fa-sync-alt"></i> Refresh Controls
    </button>
  </div>

</div>
